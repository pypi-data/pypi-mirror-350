{
    "general":
    {
        "template_name": "inia19",
        "template_stereo_name": "NMT_v2.0_asym"
    },
    "short_preparation_pipe":
    {
        "aladin_T2_on_T1":{},
    	"crop_aladin_pipe":
    	{
            "reg_T1_on_template":
            {
                "rig_only_flag":true
            },
            "reg_T1_on_template2":
            {
                "rig_only_flag":true
            }
    	},
        "pad_template":
        {
            "operation" : "PadImage",
            "op2" : "70"
        },
        "denoise":
        {
            "shrink_factor": 2
        }
    },
    "debias":
    {
        "s": 2
    },
    "reg":
    {
        "n": 2,
        "m": "ref",
        "dof": 12
    },
    "old_segment_pipe":
    {
        "segment":
        {
            "gm_output_type": [false, false, true],
            "wm_output_type": [false, false, true],
            "csf_output_type": [false, false, true]
        },
        "threshold_gm":
        {
            "thresh": 0.5
        },
        "threshold_wm":
        {
            "thresh": 0.5
        },
        "threshold_csf":
        {
            "thresh": 0.5
        },
        "export_5tt_pipe": {},
        "IsoSurface_brain_pipe":
        {
            "merge_brain_tissues":
            {
                "keep_indexes": [1, 2, 3]
            }
        }
    },
    "mask_from_seg_pipe":
    {
        "dilate_mask":
        {
            "kernel_shape": "sphere",
            "kernel_size": 2
        },
        "erode_mask":
        {
            "kernel_shape": "sphere",
            "kernel_size": 2
        }
    },

    "skull_t1_pipe":
    {
        "headmask_t1_pipe":
        {
            "t1_head_dilate":
            {
                "operation": "modal",
                "kernel_shape": "boxv",
                "kernel_size": 9.0
            },
            "t1_head_erode":
            {
                "kernel_shape": "boxv",
                "kernel_size": 9.0
            }
        },
        "skullmask_t1_pipe":
        {
            "t1_fast":
            {
                "args": "-l 10",
                "img_type": 1,
                "output_biascorrected": true,
                "output_biasfield": true
            },
            "t1_head_erode_skin":
            {
                "kernel_shape": "boxv",
                "kernel_size": 9.0
            },
            "t1_skull_gcc_erode":
            {
                "kernel_shape": "boxv",
                "kernel_size": 6.0
            },
            "t1_skull_gcc_dilate":
            {
                "operation": "modal",
                "kernel_shape": "boxv",
                "kernel_size": 6.0
            },
            "t1_skull_dilate":
            {
                "operation": "modal",
                "kernel_shape": "boxv",
                "kernel_size": 4.0
            },
            "t1_skull_erode":
            {
                "kernel_shape": "boxv",
                "kernel_size": 4.0
            },
            "t1_skull_fov":
            {
                "brainsize": 45
            }
        }
    },

    "skull_petra_pipe":
    {
        "headmask_petra_pipe":
        {
            "petra_head_gcc_erode":
            {
                "kernel_shape": "boxv",
                "kernel_size": 5.0
            },
            "petra_head_gcc_dilate":
            {
                "operation": "modal",
                "kernel_shape": "boxv",
                "kernel_size": 5.0
            },

            "petra_head_dilate":
            {
                "operation": "modal",
                "kernel_shape": "boxv",
                "kernel_size": 7.0
            },
            "petra_head_erode":
            {
                "kernel_shape": "boxv",
                "kernel_size": 7.0
            }
        },
        "skullmask_petra_pipe":
        {

            "petra_fast":
            {
                "args": " -l 10",
                "img_type": 3,
                "output_biascorrected": true,
                "output_biasfield": true
            },
            "petra_head_erode_skin":
            {
                "kernel_shape": "boxv",
                "kernel_size": 12.0
            },

            "petra_skull_gcc_erode":
            {
                "kernel_shape": "boxv",
                "kernel_size": 5.0
            },
            "petra_skull_gcc_dilate":
            {
                "operation": "modal",
                "kernel_shape": "boxv",
                "kernel_size": 5.0
            },

            "petra_skull_dilate":
            {
                "operation": "modal",
                "kernel_shape": "boxv",
                "kernel_size": 7.0
            },
            "petra_skull_erode":
            {
                "kernel_shape": "boxv",
                "kernel_size": 7.0
            },
            "petra_skull_fov":
            {
                "brainsize": 45
            }
        }
    },
    "skull_ct_pipe":
    {

        "skullmask_ct_pipe":
        {
            "ct_skull_auto_mask":
            {
                "kmeans": true,
                "sample_bins": 30,
                "distance": 10,
                "operation": "lower",
                "index": 2
            },
            "ct_skull_dilate":
            {
                "operation" : "modal",
                "kernel_shape" : "boxv",
                "kernel_size" : 3.0
            },
            "ct_skull_erode":
            {
                "kernel_shape" : "boxv",
                "kernel_size" : 3.0
            },
            "ct_skull_fov":
            {
                "brainsize" : 45
            }
        }
    }
}
