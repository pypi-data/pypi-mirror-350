<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="view_partner_check_somoffice_email_wizard" model="ir.ui.view">
      <field name="name">Partner Check Somoffice Email Wizard</field>
      <field name="model">partner.check.somoffice.email.wizard</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="partner_id" invisible="1"/>
            <field name="somoffice_email"/>
          </group>
          <footer>
            <button special="cancel" string="Cancel" class="btn-secondary"/>
          </footer>
        </form>
      </field>
    </record>
    <act_window id="action_check_somoffice_email_wizard" name="Check SomOffice Email" res_model="partner.check.somoffice.email.wizard" view_type="form" view_mode="form" target="new"/>
    <record id="view_partner_check_somoffice_email_wizard_button" model="ir.ui.view">
      <field name="name">res.partner.form.check.somoffice.email.wizard.button</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form"/>
      <field name="arch" type="xml">
        <sheet position="before">
          <header>
            <button id="button_contract_check_somoffice_email_wizard" name="%(action_check_somoffice_email_wizard)d" string="Check SomOffice Email" type="action" context="{'default_active_id': active_id}"/>
          </header>
        </sheet>
      </field>
    </record>
  </data>
</odoo>
