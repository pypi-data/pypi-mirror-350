include README.md
include LICENSE
include pyproject.toml
include MANIFEST.in

# 包含模板文件
recursive-include instancer/templates *.html

# 包含静态文件（如果有的话）
recursive-include instancer/static *

# 排除不需要的文件
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
global-exclude *.db
global-exclude *.sqlite
global-exclude *.sqlite3

# 排除测试和开发文件
exclude tests/*
exclude examples/*
exclude docs/*
exclude .github/*
exclude .vscode/*
exclude .idea/*
