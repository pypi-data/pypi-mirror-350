<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>manage users</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='css/style.css') }}">
</head>
<body>
    <div class="container">
        <h2>users list</h2>
        <a href="{{ url_for('admin.add_user') }}" class="btn btn-primary">add user</a>
        <table class="table">
            <thead>
                <tr>
                    <th>id</th>
                    <th>username</th>
                    <th>role</th>
                    <th>blocked?</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.role }}</td>
                    <td>
                        {% if user.is_blocked %}
                            <span class="badge badge-danger">blocked</span>
                        {% else %}
                            <span class="badge badge-success">active</span>
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ url_for('admin.edit_user', user_id=user.id) }}" class="btn btn-warning">edit</a>
                        {% if user.is_blocked %}
                            <a href="{{ url_for('admin.unblock_user', user_id=user.id) }}" class="btn btn-success">unblock</a>
                        {% endif %}
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <a href="{{ url_for('dashboard.show_dashboard') }}" class="btn btn-secondary">back to home</a>
</body>
</html>



