<record id="recruitment_stage_group" model="res.groups">
    <field name="name">Recruitment Stage</field>
    <field name="category_id" ref="recruitment_configurator_module_category" />
    <field
            name="users"
            eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
        />
</record>

