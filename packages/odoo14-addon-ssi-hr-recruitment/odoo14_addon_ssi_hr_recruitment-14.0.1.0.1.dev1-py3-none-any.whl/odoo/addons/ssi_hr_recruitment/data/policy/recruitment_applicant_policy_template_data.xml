<odoo>
<data noupdate="1">
<record id="recruitment_applicant_policy_template" model="policy.template">
    <field name="name">Standard</field>
    <field name="model_id" ref="model_recruitment_applicant" />
    <field
                name="state_field_id"
                search="[('model_id.model','=','recruitment_applicant'),('name','=','state')]"
            />
    <field name="sequence" eval="100" />
    <field name="python_code">result=True</field>
</record>

<!-- confirm -->
<record
            id="recruitment_applicant_policy_template_detail_confirm"
            model="policy.template_detail"
        >
    <field name="template_id" ref="recruitment_applicant_policy_template" />
    <field
                name="field_id"
                search="[('model_id.model','=','recruitment_applicant'),('name','=','confirm_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field
                name="state_ids"
                search="[('field_id.model_id.model','=','recruitment_applicant'),('value','=','draft')]"
            />
    <field name="restrict_user" eval="1" />
    <field name="computation_method">use_group</field>
    <field name="group_ids" eval="[(6,0,[ref('recruitment_applicant_user_group')])]" />
    <field name="restrict_additional" eval="0" />
</record>

<!-- approve -->
<record
            id="recruitment_applicant_policy_template_detail_approve"
            model="policy.template_detail"
        >
    <field name="template_id" ref="recruitment_applicant_policy_template" />
    <field
                name="field_id"
                search="[('model_id.model','=','recruitment_applicant'),('name','=','approve_ok')]"
            />
    <field name="restrict_state" eval="1" />
    <field
                name="state_ids"
                search="[('field_id.model_id.model','=','recruitment_applicant'),('value','=','confirm')]"
            />
    <field name="restrict_user" eval="0" />
    <field name="restrict_additional" eval="1" />
    <field name="additional_python_code">result = False
if env.user.id in document.active_approver_user_ids.ids:
    result = True</field>
</record>

