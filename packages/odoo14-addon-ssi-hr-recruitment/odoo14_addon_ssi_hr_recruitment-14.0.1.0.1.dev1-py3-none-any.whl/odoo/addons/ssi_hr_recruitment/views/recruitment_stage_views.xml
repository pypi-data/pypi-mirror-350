<odoo>
    <record id="recruitment_stage_view_tree" model="ir.ui.view">
        <field name="name">recruitment_stage - Tree</field>
        <field name="model">recruitment_stage</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_tree"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='code']" position="before">
                    <field name="sequence" widget="handle" />
                </xpath>
                <xpath expr="//field[@name='name']" position="after">
                    <field name="job_ids" widget="many2many_tags" />
                </xpath>
            </data>
        </field>
    </record>

    <record id="recruitment_stage_view_search" model="ir.ui.view">
        <field name="name">recruitment_stage - Search</field>
        <field name="model">recruitment_stage</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_search"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data />
        </field>
    </record>

    <record id="recruitment_stage_view_form" model="ir.ui.view">
        <field name="name">recruitment_stage - Form</field>
        <field name="model">recruitment_stage</field>
        <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_form"
        />
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='active']" position="before">
                    <field name="job_ids" widget="many2many_tags" />
                    <field name="sequence" />
                </xpath>
            </data>
        </field>
    </record>

    <record id="recruitment_stage_action" model="ir.actions.act_window">
        <field name="name">Stages</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">recruitment_stage</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="recruitment_stage_menu"
        name="Recruitment Stages"
        parent="recruitment_configuration_menu"
        action="recruitment_stage_action"
        groups="recruitment_stage_group"
        sequence="35"
    />

</odoo>
