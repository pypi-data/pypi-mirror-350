<odoo>
<record id="state_change_history_view_tree" model="ir.ui.view">
    <field name="name">state_change_history - tree</field>
    <field name="model">state_change_history</field>
    <field name="arch" type="xml">
        <tree create="false" edit="false" delete="false">
            <field name="user_id" widget="many2one_avatar_user" />
            <field name="state_from" />
            <field name="state_to" />
            <field name="reason" />
            <field name="date_change" />
        </tree>
    </field>
</record>

<record id="state_change_history_view_form" model="ir.ui.view">
    <field name="name">state_change_history - form</field>
    <field name="model">state_change_history</field>
    <field name="arch" type="xml">
        <form create="false" edit="false" delete="false">
            <group name="main" colspan="4" col="2">
                <field name="user_id" widget="many2one_avatar_user" />
                <field name="state_from" />
                <field name="state_to" />
                <field name="reason" />
                <field name="date_change" />
            </group>
        </form>
    </field>
</record>

</odoo>
