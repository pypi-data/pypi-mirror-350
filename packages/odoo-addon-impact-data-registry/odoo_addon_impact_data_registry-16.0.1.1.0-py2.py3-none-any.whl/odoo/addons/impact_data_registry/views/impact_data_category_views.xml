<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_impact_data_category_form" model="ir.ui.view">
        <field name="name">impact.data.category.form</field>
        <field name="model">impact.data.category</field>
        <field name="arch" type="xml">
            <form string="Impact Data Category">
                <sheet>
                    <field name="company_id" invisible="1"/>
                    <field name="unallowed_parent_ids" invisible="1"/>
                    <group>
                        <field name="name" />
                        <field name="description" />
                        <field
                            name="parent_id"
                            domain="[('id', 'not in', unallowed_parent_ids)]"
                        />
                        <field name="complete_name" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_impact_data_category_tree" model="ir.ui.view">
        <field name="name">impact.data.category.tree</field>
        <field name="model">impact.data.category</field>
        <field name="arch" type="xml">
            <tree string="Impact Data Categories">
                <field name="complete_name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>
    <record id="view_impact_data_category_search" model="ir.ui.view">
        <field name="name">impact.data.category.search</field>
        <field name="model">impact.data.category</field>
        <field name="arch" type="xml">
            <search string="Search Impact Data Categories">
                <field name="complete_name"/>
                <field name="description"/>
            </search>
        </field>
    </record>
    <record id="impact_data_category_action" model="ir.actions.act_window">
        <field name="name">Impact Data Categories</field>
        <field name="res_model">impact.data.category</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_impact_data_category_search"/>
        <field name="view_id" ref="view_impact_data_category_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to create a new impact data category.
            </p>
        </field>
    </record>
</odoo>
