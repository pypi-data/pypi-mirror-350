<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_impact_data_entry_form" model="ir.ui.view">
        <field name="name">impact.data.entry.form</field>
        <field name="model">impact.data.entry</field>
        <field name="arch" type="xml">
            <form string="Impact Data Entry">
                <sheet>
                    <field name="company_id" invisible="1"/>
                    <group>
                        <group>
                            <field name="category_id"/>
                            <field name="year"/>
                        </group>
                        <group>
                            <field name="type_id"/>
                            <field name="value"/>
                        </group>
                        <group>
                            <field name="analytic_account_id" />
                        </group>
                    </group>
                    <group>
                        <field name="comment"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_impact_data_entry_tree" model="ir.ui.view">
        <field name="name">impact.data.entry.tree</field>
        <field name="model">impact.data.entry</field>
        <field name="arch" type="xml">
            <tree string="Impact Data Entries">
                <field name="type_uom_id" invisible="1"/>
                <field name="year"/>
                <field name="category_id"/>
                <field name="analytic_account_id"/>
                <field name="type_id"/>
                <field name="value"/>
                <field name="comment"/>
            </tree>
        </field>
    </record>
    <record id="view_impact_data_entry_pivot" model="ir.ui.view">
        <field name="name">impact.data.entry.pivot</field>
        <field name="model">impact.data.entry</field>
        <field name="arch" type="xml">
            <pivot string="Impact Data Entries">
                <field name="year" type="row"/>
                <field name="category_id" type="row"/>
                <field name="analytic_account_id" type="col"/>
                <field name="type_name" type="col"/>
                <field name="type_uom_id" string="Unit of Measure" type="col"/>
                <field name="value" type="measure"/>
            </pivot>
        </field>
    </record>
    <record id="view_impact_data_entry_graph" model="ir.ui.view">
        <field name="name">impact.data.entry.graph</field>
        <field name="model">impact.data.entry</field>
        <field name="arch" type="xml">
            <graph string="Impact Data Entries" type="bar">
                <field name="year" type="row"/>
                <field name="category_id" type="row"/>
                <field name="analytic_account_id" type="col"/>
                <field name="type_name" type="col"/>
                <field name="type_uom_id" string="Unit of Measure" type="col"/>
                <field name="value" type="measure"/>
            </graph>
        </field>
    </record>
    <record id="view_impact_data_entry_search" model="ir.ui.view">
        <field name="name">impact.data.entry.search</field>
        <field name="model">impact.data.entry</field>
        <field name="arch" type="xml">
            <search string="Search Impact Data Entries">
                <field name="category_id"/>
                <field name="type_id"/>
                <field name="year"/>
                <field name="comment"/>
            </search>
        </field>
    </record>
    <record id="impact_data_entry_action" model="ir.actions.act_window">
        <field name="name">Impact Data Entries</field>
        <field name="res_model">impact.data.entry</field>
        <field name="view_mode">tree,form,pivot,graph</field>
        <field name="search_view_id" ref="view_impact_data_entry_search"/>
        <field name="view_id" ref="view_impact_data_entry_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click to create a new impact data entry.
            </p>
        </field>
    </record>
</odoo>
