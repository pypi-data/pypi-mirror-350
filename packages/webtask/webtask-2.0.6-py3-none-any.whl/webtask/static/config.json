{
    "webtask": {
        "version": "2.0.0",
        "features": {
            "file_browser": true,
            "process_preview": true,
            "advanced_kill": true,
            "transparency_layers": true,
            "hierarchy_view": true
        },
        "transparency": {
            "system_processes": 0.3,
            "kernel_processes": 0.2,
            "user_processes": 0.9,
            "service_processes": 0.7,
            "background_processes": 0.5
        },
        "preview": {
            "thumbnail_size": {
                "width": 60,
                "height": 40
            },
            "html_scale": 0.1,
            "max_preview_lines": 10
        },
        "file_browser": {
            "default_path": "/",
            "show_hidden": false,
            "max_file_size": 1048576
        },
        "process_monitor": {
            "update_interval": 2000,
            "max_processes": 100,
            "sort_by": "cpu",
            "show_threads": false
        },
        "kill_signals": [
            { "name": "SIGTERM", "code": 15, "description": "Graceful termination" },
            { "name": "SIGKILL", "code": 9, "description": "Force kill" },
            { "name": "SIGINT", "code": 2, "description": "Interrupt" },
            { "name": "SIGHUP", "code": 1, "description": "Hangup" },
            { "name": "SIGUSR1", "code": 10, "description": "User signal 1" },
            { "name": "SIGUSR2", "code": 12, "description": "User signal 2" }
        ]
    }
}