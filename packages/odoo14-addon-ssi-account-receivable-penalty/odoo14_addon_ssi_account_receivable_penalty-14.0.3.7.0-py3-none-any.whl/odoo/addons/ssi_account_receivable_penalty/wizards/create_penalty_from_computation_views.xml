<?xml version="1.0" encoding="utf-8" ?>
<odoo>

<record id="create_penalty_from_computation_view_form" model="ir.ui.view">
    <field name="name">Create Penalty From Computation</field>
    <field name="model">create_penalty_from_computation</field>
    <field name="arch" type="xml">
        <form>
            <field name="computation_ids" readonly="1" force_save="1" />
            <footer>
                <button
                        string="Confirm"
                        name="action_confirm"
                        type="object"
                        class="oe_highlight"
                        confirm="Are you sure?"
                    />
                or
                <button string="Cancel" class="oe_link" special="cancel" />
            </footer>
        </form>
    </field>
</record>

<record id="create_penalty_from_computation_action" model="ir.actions.act_window">
    <field name="name">Create Penalty From Computation</field>
    <field name="res_model">create_penalty_from_computation</field>
    <field name="view_mode">form</field>
    <field name="view_id" ref="create_penalty_from_computation_view_form" />
    <field name="target">new</field>
    <field
            name="binding_model_id"
            ref="ssi_account_receivable_penalty.model_account_receivable_penalty_computation"
        />
    <field name="binding_view_types">form</field>
</record>

</odoo>
