{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "status": {
      "type": "string"
    },
    "code": {
      "type": "integer"
    },
    "data": {
      "type": "object",
      "properties": {
        "users": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer"
              },
              "name": {
                "type": "string"
              },
              "active": {
                "type": "boolean"
              }
            },
            "required": [
              "active",
              "id",
              "name"
            ]
          }
        },
        "pagination": {
          "type": "object",
          "properties": {
            "page": {
              "type": "integer"
            },
            "total_pages": {
              "type": "integer"
            },
            "total_items": {
              "type": "integer"
            }
          },
          "required": [
            "page",
            "total_items",
            "total_pages"
          ]
        }
      },
      "required": [
        "pagination",
        "users"
      ]
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "code",
    "data",
    "status",
    "timestamp"
  ]
}