# EasySeries Configuration Example
# Copy this file to .env and modify as needed

# HTTP Client Settings
EASYSERIES_TIMEOUT=30.0
EASYSERIES_MAX_RETRIES=3
EASYSERIES_BASE_URL=https://api.example.com
EASYSERIES_USER_AGENT=EasySeries/0.1.0

# Rate Limiting
EASYSERIES_RATE_LIMIT_REQUESTS=100

# Logging
EASYSERIES_LOG_LEVEL=INFO
EASYSERIES_LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Feature Flags
EASYSERIES_ENABLE_CACHING=false
EASYSERIES_ENABLE_METRICS=false
