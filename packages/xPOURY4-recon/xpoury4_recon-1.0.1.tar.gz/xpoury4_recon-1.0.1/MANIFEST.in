# xPOURY4 Recon - Package Manifest
# This file specifies which files to include in the PyPI distribution

# Include essential project files
include README.md
include LICENSE
include requirements.txt
include config.yaml
include pyproject.toml
include setup.py

# Include package source code
recursive-include xPOURY4_recon *.py
recursive-include xPOURY4_recon/web/templates *.html

# Include documentation
include *.md
include *.rst
include *.txt

# Exclude development and build files
exclude .gitignore
exclude .pre-commit-config.yaml
exclude tox.ini
exclude Makefile

# Exclude test files
recursive-exclude tests *
recursive-exclude test *
exclude test_*

# Exclude development directories
recursive-exclude docs *
recursive-exclude examples *
recursive-exclude Landingpage *
recursive-exclude screenshots *

# Exclude Python cache and compiled files
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * *.pyo
recursive-exclude * *.pyd
recursive-exclude * .Python

# Exclude IDE and editor files
recursive-exclude * .vscode
recursive-exclude * .idea
recursive-exclude * *.swp
recursive-exclude * *.swo
recursive-exclude * *~
recursive-exclude * .DS_Store

# Exclude version control
recursive-exclude * .git*
recursive-exclude * .hg*
recursive-exclude * .svn*

# Exclude build artifacts
recursive-exclude * build
recursive-exclude * dist
recursive-exclude * *.egg-info
recursive-exclude * .eggs
recursive-exclude * .tox
recursive-exclude * .coverage
recursive-exclude * htmlcov

# Exclude logs and temporary files
recursive-exclude * logs
recursive-exclude * results
recursive-exclude * *.log
recursive-exclude * *.tmp
recursive-exclude * *.temp

# Exclude OS-specific files
recursive-exclude * Thumbs.db
recursive-exclude * .DS_Store
recursive-exclude * desktop.ini

# Include specific configuration files if needed
# include config/*.yaml
# include config/*.json 