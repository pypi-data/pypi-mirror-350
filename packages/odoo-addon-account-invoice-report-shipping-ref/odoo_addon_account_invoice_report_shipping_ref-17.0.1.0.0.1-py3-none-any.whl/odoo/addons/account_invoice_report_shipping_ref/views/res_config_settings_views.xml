<odoo>
    <record
        model="ir.ui.view"
        id="account_invoice_report_shipping_ref_res_config_settings_view_form"
    >
        <field
            name="name"
        >account.invoice.report.shipping.ref.res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//block[@id='invoicing_settings']//setting[@id='total_amount_words']"
                position="after"
            >
                <setting
                    id="invoice_shipping_ref_label"
                    help="Label shown on reports for shipping reference"
                >
                    <label for="invoice_shipping_ref_label" />
                    <field name="invoice_shipping_ref_label" />
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
